{
  "name": "task-management-backend",
  "version": "1.0.0",
  "description": "Backend for task management system",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting would run here - add ESLint configuration'",
    "db:init": "ts-node src/scripts/initDatabase.ts",
    "db:seed": "ts-node src/scripts/seedDatabase.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^8.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/jest": "^29.5.3",
    "@types/better-sqlite3": "^7.6.4",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1"
  }
}
